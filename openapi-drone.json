  "components": {
    "schemas": {
      "Coordinate": {
        "type": "object",
        "title": "Coordinate",
        "required": [
          "lat",
          "lon"
        ],
        "properties": {
          "lat": {
            "type": "number",
            "title": "Lat"
          },
          "lon": {
            "type": "number",
            "title": "Lon"
          }
        }
      },
      "FlightPath": {
        "type": "object",
        "title": "FlightPath",
        "required": [
          "waypoints",
          "altitude",
          "speed"
        ],
        "properties": {
          "waypoints": {
            "type": "array",
            "title": "Waypoints",
            "items": {
              "$ref": "#/components/schemas/Coordinate"
            }
          },
          "altitude": {
            "type": "number",
            "title": "Altitude"
          },
          "speed": {
            "type": "number",
            "title": "Speed"
          }
        }
      },
      "ImageInfo": {
        "type": "object",
        "title": "ImageInfo",
        "required": [
          "image_id",
          "url",
          "timestamp",
          "coordinates"
        ],
        "properties": {
          "image_id": {
            "type": "string",
            "title": "Image Id"
          },
          "url": {
            "type": "string",
            "title": "Url"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "title": "Timestamp"
          },
          "coordinates": {
            "$ref": "#/components/schemas/Coordinate"
          }
        }
      },
      "MissionResponse": {
        "type": "object",
        "title": "MissionResponse",
        "required": [
          "mission_id",
          "status",
          "submitted_at"
        ],
        "properties": {
          "mission_id": {
            "type": "string",
            "title": "Mission Id"
          },
          "status": {
            "type": "string",
            "title": "Status"
          },
          "submitted_at": {
            "type": "string",
            "format": "date-time",
            "title": "Submitted At"
          }
        }
      },
      "ValidationError": {
        "type": "object",
        "title": "ValidationError",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "properties": {
          "loc": {
            "type": "array",
            "title": "Location",
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        }
      },
      "HTTPValidationError": {
        "type": "object",
        "title": "HTTPValidationError",
        "properties": {
          "detail": {
            "type": "array",
            "title": "Detail",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      }
    },
    "responses": {
      "400": {
        "description": "Bad Request – missing or invalid parameter"
      },
      "401": {
        "description": "Unauthorized – invalid API key"
      },
      "500": {
        "description": "Internal Server Error – unexpected error at OWM"
      }
    },
    "securitySchemes": {
